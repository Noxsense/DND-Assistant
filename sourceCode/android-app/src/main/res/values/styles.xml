<resources>
    <!-- Base application theme. -->
    <!-- with api 29 / android 10
    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
    -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Remove Top Action Bar, but not fullscreen. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- no colorPrimary needed. -->
        <item name="android:windowFullscreen">false</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>

        <item name="android:background">@android:color/transparent</item>

        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:textColor">#000000</item>

        <!-- minimal default padding -->
        <item name="android:padding">1sp</item>

        <item name="android:listViewStyle">@style/DividerLessListView</item>

    </style>
    <style name="DividerLessListView" parent="android:Widget.ListView">
      <item name="android:divider">@android:color/transparent</item>
      <item name="android:dividerHeight">3sp</item>
    </style>
    <style name="NoteText" parent="android:Widget.TextView">
      <item name="android:textSize">@dimen/textSizeNotes</item>
      <item name="android:alpha">0.5</item>
    </style>
    <style name="PanelTitle" parent="android:Widget.TextView">
      <item name="android:textSize">30sp</item>
    </style>
</resources>
