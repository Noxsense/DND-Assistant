<LinearLayout
  android:layout_height="match_parent"
  android:layout_width="match_parent"
  android:orientation="vertical"
  xmlns:android="http://schemas.android.com/apk/res/android"
  >
  <TextView
    android:layout_height="0sp"
    android:layout_weight="0.1"
    android:layout_width="match_parent"
    android:text="@string/title_skills"
    android:textSize="20sp"
    />
  <TextView
    android:layout_height="0sp"
    android:layout_marginVertical="@dimen/vmargin"
    android:layout_weight="0.045"
    android:layout_width="match_parent"
    android:id="@+id/proficiency_value"
    android:textSize="12sp"
    />
  <TextView
    android:layout_height="0sp"
    android:layout_marginVertical="@dimen/vmargin"
    android:layout_weight="0.045"
    android:layout_width="match_parent"
    android:text="Skills"
    android:textSize="15sp"
    />
  <ListView
    android:background="@drawable/framed"
    android:divider="@android:color/transparent"
    android:id="@+id/list_skills"
    android:layout_height="0sp"
    android:layout_marginVertical="@dimen/vmargin"
    android:layout_weight="0.405"
    android:layout_width="match_parent"
    />
  <TextView
    android:layout_height="0sp"
    android:layout_marginVertical="@dimen/vmargin"
    android:layout_weight="0.045"
    android:layout_width="match_parent"
    android:text="Proficiencies"
    android:textSize="15sp"
    />
  <ListView
    android:divider="@android:color/transparent"
    android:id="@+id/list_proficiencies_and_languages"
    android:layout_height="0sp"
    android:layout_marginVertical="@dimen/vmargin"
    android:layout_weight="0.405"
    android:layout_width="match_parent"
    />
</LinearLayout>
