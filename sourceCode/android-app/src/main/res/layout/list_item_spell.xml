<LinearLayout
  android:gravity="top"
  android:background="@drawable/framed_white_base"
  android:id="@+id/spell_item_layout"
  android:layout_height="match_parent"
  android:layout_width="match_parent"
  android:orientation="vertical"
  xmlns:android="http://schemas.android.com/apk/res/android"
  >
  <TextView
    android:id="@+id/spell_name"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:text="Spell Name"
    />
  <LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
      android:layout_height="20sp"
      android:layout_width="match_parent"
      android:orientation="horizontal"
      android:alpha="0.66"
      >
      <TextView
        android:id="@+id/brief_spell_school_minlvl"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_width="0sp"
        android:textSize="9sp"
        android:text=" X-Level (school)"
        />
      <TextView
        android:id="@+id/spell_duration"
        android:layout_height="wrap_content"
        android:layout_width="0sp"
        android:layout_weight="2"
        android:textSize="9sp"
        android:text="1 Action => Instantious"
        />
      <TextView
        android:id="@+id/spell_area"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_width="0sp"
        android:textSize="9sp"
        android:text="160 ft (one target)"
        />
    </LinearLayout>
    <TextView
      android:id="@+id/spell_on_success"
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      android:text="eg. Cloud, radiant. (10d6) / Save: CHA // tip show preview."
      android:textSize="9sp"
      />
    <LinearLayout
      android:layout_height="30sp"
      android:layout_width="match_parent"
      android:orientation="horizontal"
      >
      <Button style="@style/PlainButton"
        android:id="@+id/spell_quick_cast"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_width="0sp"
        android:text="Prepare Toggle"
        />
    </LinearLayout>
  </LinearLayout>
</LinearLayout>
