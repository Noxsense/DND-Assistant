<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:background="@drawable/framed"
  android:orientation="vertical"
  >
  <ProgressBar
    android:background="#00000000"
    android:id="@+id/healthbar"
    android:indeterminate="false"
    android:layout_height="10dp"
    android:layout_width="match_parent"
    android:progress="25"
    android:progressDrawable="@drawable/healthbar"
    style="@android:style/Widget.ProgressBar.Horizontal"
    />
  <LinearLayout
    android:background="@drawable/framed"
    android:id="@+id/ac_speed_death_rest"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/hmargin"
    android:layout_marginVertical="@dimen/vmargin"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:padding="6sp"
    android:visibility="gone"
    >
    <!-- AC -->
    <TextView
      android:background="@drawable/framed"
      android:id="@+id/armorclass"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="@dimen/hmargin"
      android:layout_marginVertical="@dimen/vmargin"
      android:layout_width="wrap_content"
      android:padding="6sp"
      android:text="@string/armorclass"
      />
    <!-- Speed -->
    <TextView
      android:background="@drawable/framed"
      android:id="@+id/speed"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="@dimen/hmargin"
      android:layout_marginVertical="@dimen/vmargin"
      android:layout_width="wrap_content"
      android:padding="6sp"
      android:text="@string/speed"
      />
    <!-- Deathsaves -->
    <TextView
      android:background="@drawable/framed"
      android:id="@+id/deathsaves"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="@dimen/hmargin"
      android:layout_marginVertical="@dimen/vmargin"
      android:layout_width="wrap_content"
      android:padding="6sp"
      android:text="XoXXoX"
      />
    <!-- Resting -->
    <LinearLayout
      android:background="@drawable/framed"
      android:gravity="center"
      android:id="@+id/resting"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="@dimen/hmargin"
      android:layout_marginVertical="@dimen/vmargin"
      android:layout_width="wrap_content"
      android:orientation="horizontal"
      android:padding="6sp"
      >
      <TextView
        android:background="@drawable/framed"
        android:id="@+id/longrest"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/hmargin"
        android:layout_marginVertical="@dimen/vmargin"
        android:layout_width="wrap_content"
        android:padding="6sp"
        android:text="@string/longrest"
        />
    </LinearLayout> <!-- resting -->
  </LinearLayout> <!-- AC/ Speed / Saves / Resting -->
  <TextView
    android:background="@drawable/framed"
    android:id="@+id/conditions"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/hmargin"
    android:layout_marginVertical="@dimen/vmargin"
    android:layout_width="match_parent"
    android:padding="6sp"
    android:text="Prone ..."
    />
  <!-- health panel end -->
</LinearLayout>

