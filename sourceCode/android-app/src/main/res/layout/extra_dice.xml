    android:background="@drawable/framed"
    android:gravity="center"
    android:id="@+id/d6"
    android:layout_height="wrap_content"
    android:layout_margin="2sp"
    android:layout_weight="0.1"
    android:layout_width="0sp"
    android:padding="2sp"
    android:shadowColor="#A8A8A8"
    android:shadowDx="0"
    android:shadowDy="0" 
    android:text="D6"
    />
  <TextView
    android:background="@drawable/framed"
    android:gravity="center"
    android:id="@+id/d8"
    android:layout_height="wrap_content"
    android:layout_margin="2sp"
    android:layout_weight="0.1"
    android:layout_width="0sp"
