    android:shadowDx="0"
    android:shadowDy="0" 
    android:text="D10"
    />
  <TextView
    android:background="@drawable/framed"
    android:gravity="center"
    android:id="@+id/d12"
    android:layout_height="wrap_content"
    android:layout_margin="2sp"
    android:layout_weight="0.1"
    android:layout_width="0sp"
    android:padding="2sp"
    android:shadowColor="#A8A8A8"
    android:shadowDx="0"
    android:shadowDy="0" 
    android:text="D12"
    />
  <TextView
    android:background="@drawable/framed"
    android:gravity="center"
    android:id="@+id/d20"
    android:layout_height="wrap_content"
